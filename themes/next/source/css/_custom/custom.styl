  height: auto;
}

// Custom styles.
// 更改文中链接的颜色
.post-body a {
  color: $orange;
  text-decoration: none;
  border-bottom: 1;
  &:hover {
    color: $blue;
    //text-decoration: underline;
  }
}

// 右下角返回顶部按钮样式
.back-to-top:hover {
    //color: rgb(136, 255, 13);
	background-color: rgb(0, 0, 0); //black
}

// 文章```代码块顶部样式
.highlight figcaption {
    margin: 0em;
    padding: 0.5em;
    background: #eee;
    border-bottom: 1px solid #e9e9e9;
}
.highlight figcaption a {
    color: rgb(80, 115, 184);
}

// 修改文章内code样式
code {
    color: #ff7600;
    background: #fbf7f8;
    margin: 2px;
}

// 大代码块的自定义样式
.highlight, pre {
    margin: 5px 0;
    padding: 5px;
    border-radius: 0px;
}
.highlight, code, pre {
    border: 1px solid #d6d6d6;
}




// [Read More]按钮样式: 黑底白字
// [Read More]按钮样式: 黑底白字
.post-button .btn {
    color: rgb(0,0,0) !important;
}
.post-button .btn:hover {
    color: rgb(255,255,255) !important;
	background-color: rgba(0, 0, 0, 1); !important; //black
}



// 页面底部页码
.pagination .page-number.current {
    border-radius: 0%;
    background-color: rgb(0,0,0);
}

// 页面底部页码，鼠标置于上方，黑底绿字
.pagination .page-number:hover, .pagination .page-number:active{
	color: rgb(255,255,255);
	border: none;
	border-radius: 0%;
    //background-color: rgba(255, 0, 100, 0.75); //品红
	background-color: rgba(0, 0, 0, 1); //black
}
	

// 页面底部页码, 去除鼠标置于上方时，数字上方的线
.pagination .prev, .pagination .next, .pagination .page-number {
    margin-bottom: 10px;
    border: none;
	color: rgb(0,0,0);
	background-color: rgba(255, 255, 255, 1); //black
}

// 图片下方的空白行
img{
	mrgin: 0px;
}

//文章目录默认展开
.post-toc .nav .nav-child { display: block; }

//文章目录字体大小调整
.post-toc ol {  
  font-size : 13px;     
} 
